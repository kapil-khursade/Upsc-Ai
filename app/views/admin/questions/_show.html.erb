<div class="isolated_bs">
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <strong style="font-size: 18px;">Q: <%= @question.question %></strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 text-center">
                    <span class="badge rounded-pill bg-primary"><%= @question.paper.name %></span>
                </div>
                <div class="col-md-8 text-right">
                    <% @question.keyword.each do |key| %>
                      <span class="badge rounded-pill bg-secondary"><%= key.keyword %></span>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <% @answer_error = @question.answer_error.where.not(status: "Solved").where("error_date_time > ?", (DateTime.now - 5.minutes)).order(:error_date_time).last %>
    <% if !@answer_error.nil? %>
    <div class="col-md-12 alert alert-danger" role="alert">
         <%= @answer_error.status.humanize + " Retry Count: " + @answer_error.try_number.to_s %>
    </div>
    <% end %>

    <%# Answerrs %>
    <% @question.answer.each do |ans| %>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    Ans:<p class="text-justify" style="font-size: 14px;"> <%= raw ans.get_formated_answer %></p>
                </div>
                <div class="col-md-12">
                     <span class="badge rounded-pill bg-secondary">Charged Token: <%= ans.charged_token %></span>
                </div>
            </div>
        </div>
    </div>
            
    <% end %>
</div>